<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Singleton bean have not circular dependency issue. -->
    <bean id="cda"
          class="org.springframework.samples.ioc.circular.dependency.CircularDependencyASingleton">
        <!--<constructor-arg ref="cdb"/>-->
        <property name="circularDependencyBSingleton" ref="cdb"/>
    </bean>

    <bean id="cdb"
          class="org.springframework.samples.ioc.circular.dependency.CircularDependencyBSingleton">
        <!--<constructor-arg ref="cda"/>-->
        <property name="circularDependencyASingleton" ref="cda"/>
    </bean>


    <!--This configuration will throw BeanCurrentlyInCreationException, the prototype Bean will not be cached in spring
        container when it is created.
     -->
    <bean id="cdaPrototype"
          class="org.springframework.samples.ioc.circular.dependency.CircularDependencyAPrototype"
          scope="prototype">
        <property name="circularDependencyBPrototype" ref="cdbPrototype"/>
    </bean>

    <bean id="cdbPrototype"
          class="org.springframework.samples.ioc.circular.dependency.CircularDependencyBPrototype"
          scope="prototype">
        <property name="circularDependencyAPrototype" ref="cdaPrototype"/>
    </bean>
</beans>