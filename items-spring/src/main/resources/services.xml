<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- services -->

    <bean id="petStore" class="org.springframework.samples.jpetstore.services.PetStoreServiceImpl">
        <property name="accountDao" ref="accountDao"/>
        <property name="itemDao" ref="itemDao"/>
        <!-- additional collaborators and configuration for this bean go here -->
    </bean>

    <bean id="clientService"
          class="org.springframework.samples.jpetstore.examples.ClientService"
          factory-method="getClientService"/>
    <!-- more bean definitions for services go here -->

    <!-- the factory bean, which contains a method called createInstance -->
    <bean id="serviceLocator" class="org.springframework.samples.utils.DefaultServiceLocator">
        <!-- Inject any dependencies required by this locator bean -->
    </bean>

    <!-- the bean to be created via the factory bean -->
    <bean id="clienServiceImpl"
          factory-bean="serviceLocator"
          factory-method="createClientServiceImplInstance"/>
    <bean id="accountService"
          factory-bean="serviceLocator"
          factory-method="createAccountServiceImplInstance"/>
</beans>